@model Photo
@{string image = ViewData["Image"] as string;}
<section class="container py-5">

    <button class="btn btn-light" style="height: 10%; width:15%;">
        <a class="text-warning text-decoration-none fw-bold" asp-area="" asp-controller="Photo" asp-action="Index">
            <div class="d-flex justify-content-center align-items-center gap-3">
                <i class="fa-solid fa-person-walking-arrow-loop-left"></i>
                <div>Torna alla Home</div>
            </div>
        </a>
    </button>

    <div class="d-flex justify-content-center align-items-start gap-3 row">
        <img src="data:image;base64,@image" alt="Pizza1" class="object-fit-cover border rounded" style="width:250px; height: 250px;"">
        <div class=""d-flex justify-content-center align-items-center row mt-5">
            <h5 class="text-center mb-2 fw-bold">@Model.Title</h5>
            <div class="text-center mb-2"> @Model.Description </div>
            <div class="d-flex justify-content-center align-items-center gap-2"> 
                <div>Categorie:</div>
                @foreach (Category category in Model.Categories)
                {
                    <div class="d-flex justify-content-center align-items-center row gap-1">
                        <label>
                            @category.Name
                        </label>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - net_il_mio_fotoalbum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/net_il_mio_fotoalbum.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid bg-warning">
        <div class="d-flex justify-content-between align-items-center px-5 py-3">
            <h1 class="text-black fw-bold">MY ALBUM</h1>
            <ul class="d-flex justify-content-center align-items-center gap-5 list-unstyled">
                <li class="">
                    <a class="text-dark text-decoration-none fw-bold" asp-area="" asp-controller="Photo" asp-action="Index">Home</a>
                </li>
                <li class="">
                    <a class="text-dark text-decoration-none fw-bold" asp-area="" asp-controller="Photo" asp-action="Create">Create</a>
                </li>
            </ul>
        </div>
    </header>
    <div class="ms_cont">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container-fluid bg-warning">
            &copy; 2023 - MY ALBUM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
